{
    "name": "dartsass-plugin-common",
    "version": "0.11.6",
    "license": "MIT",
    "description": "Common Library code to compile sass files using Dart/JS compiler",
    "main": "dist/main.js",
    "types": "lib/index.d.ts",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/codelios/dartsass-plugin-common.git"
    },
    "keywords": [
        "scss compiler plugin",
        "sass compiler plugin",
        "sass watcher",
        "scss watcher",
        "dartsass plugin",
        "sass",
        "scss",
        "css",
        "vsce",
        "vsce plugin",
        "vsce sass plugin",
        "vsce scss plugin"
    ],
    "scripts": {
        "sass": "sass",
        "prepublishOnly": "yarn prod",
        "clean": "rm -fr lib",
        "lint": "eslint src --ext ts && eslint __tests__ --ext ts",
        "fix": "eslint --fix . --ext .ts",
        "compile": "yarn clean && tsc",
        "dev": "yarn compile && webpack --mode development",
        "prod": "rm -fr node_modules/fsevents && yarn compile && webpack --mode production",
        "testonly": "mocha --timeout 5000 -r ts-node/register __tests__/**/*.spec.ts",
        "test": "yarn dev && yarn testonly"
    },
    "dependencies": {
        "autoprefixer": "10.3.1",
        "browserslist": "4.16.6",
        "chokidar": "3.5.2",
        "clean-css": "5.1.3",
        "fibers": "5.0.0",
        "postcss": "8.3.6",
        "sass": "^1.36.0"
    },
    "devDependencies": {
        "@types/chai": "4.2.21",
        "@types/clean-css": "4.2.5",
        "@types/fibers": "3.1.1",
        "@types/mocha": "9.0.0",
        "@types/node": "16.4.3",
        "@types/sass": "1.16.1",
        "@typescript-eslint/eslint-plugin": "4.28.4",
        "@typescript-eslint/parser": "4.28.4",
        "chai": "4.3.4",
        "eslint": "7.31.0",
        "eslint-config-prettier": "8.3.0",
        "eslint-plugin-prettier": "3.4.0",
        "minimist": "1.2.5",
        "mocha": "9.0.3",
        "node-gyp": "^8.1.0",
        "node-loader": "^2.0.0",
        "prettier": "2.3.2",
        "ts-loader": "9.2.4",
        "ts-node": "10.1.0",
        "typescript": "4.3.5",
        "webpack": "5.46.0",
        "webpack-cli": "4.7.2"
    }
}
